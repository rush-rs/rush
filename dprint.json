{
  "lineWidth": 120,
  "indentWidth": 4,
  "useTabs": false,

  "json": {
    "indentWidth": 2,
    "array.preferSingleLine": true
  },

  "markdown": {
    "lineWidth": 80,
    "textWrap": "always"
  },

  "toml": {
  },

  "rustfmt": {
    "max_width": 100
  },

  "ebnf": {
    "lineWidth": 60,
    "indentWidth": 2
  },

  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "proseWrap": "always",

    "plugin.jsDoc": true,
    "yml.tabWidth": 2,
    "yaml.tabWidth": 2,
    "json.tabWidth": 2,
    "jsonc.tabWidth": 2,
    "json5.tabWidth": 2
  },

  "includes": ["**/*"],
  "excludes": ["**/target", ".git"],
  "plugins": [
    "https://plugins.dprint.dev/json-0.16.0.wasm",
    "https://plugins.dprint.dev/markdown-0.14.1.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/rustfmt-0.6.2.json@886c6f3161cf020c2d75160262b0f56d74a521e05cfb91ec4f956650c8ca76ca",
    "https://plugins.dprint.dev/RubixDev/ebnf-v0.1.1.wasm",
    "https://plugins.dprint.dev/prettier-0.12.0.json@f8c34316196cf4d0fb2f51b19073331258e15e71a934ee04a7b3328db684c98f"
  ]
}
